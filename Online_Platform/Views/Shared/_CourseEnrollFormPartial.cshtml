@using Online_Platform.Infrastructure.Configurations;
@using Online_Platform.Infrastructure.Constant;
@using Online_Platform.Infrastructure.Helpers;
@using Online_Platform.Models.WebModels;
@model int

<form asp-controller="@WebConstants.CoursesController"
      asp-action="@nameof(Online_Platform.Controllers.CoursesController.Enroll)"
      asp-route-id="@Model" method="post">
    <div class="form-group m-0">
        <button type="submit" data-toggle="tooltip" title="@FormActionEnum.Enroll.ToFriendlyName() free of charge"
                class="btn btn-@FormActionEnum.Enroll.ToStyle()">
            <i class="fa fa-gift"></i>
        </button>
    </div>
</form>
